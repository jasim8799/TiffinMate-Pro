# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tiffinmate?retryWrites=true&w=majority

# CORS (Your Flutter app domain or * for development)
CORS_ORIGIN=*

# JWT Secret (CHANGE THIS TO A STRONG RANDOM STRING)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Fast2SMS Configuration (Get from https://www.fast2sms.com/)
FAST2SMS_API_KEY=your_fast2sms_api_key_here

# OTP Configuration
OTP_EXPIRY_MINUTES=2
OTP_MAX_ATTEMPTS=3

# Meal Selection Cutoff (hours before delivery)
MEAL_CUTOFF_HOURS=8

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Default Admin Credentials (CHANGE AFTER FIRST LOGIN)
DEFAULT_ADMIN_USERID=ADMIN001
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_ADMIN_MOBILE=8799760471

# Development OTP (TEMPORARY TESTING FEATURE)
# Set to 'true' to allow admin testing with fixed OTP (111111) without SMS
# ONLY works for OWNER role - customers/delivery always use real SMS
# Set to 'false' or remove in production
DEV_OTP_ENABLED=true

# Cron Jobs (set to 'false' to disable on specific instances)
ENABLE_CRON=true

# Rate Limiting (set to 'true' to disable for testing)
DISABLE_RATE_LIMIT=false

# Render Specific (No changes needed)
# Render automatically sets PORT
# Set NODE_ENV=production in Render dashboard

